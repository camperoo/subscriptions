<h1>Listing plans</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= link_to plan.name, plan %></td>
        <td><%= plan.description %></td>
        <td>
          <%= link_to "Edit", edit_plan_path(plan), class: "btn-sm btn-primary left" %>
          <%= button_to "delete", plan, :method => :delete, confirm: 'Are you sure?', class: "btn-xs btn-danger left" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr/ >

<%= link_to "New Plan", new_plan_path, class: "btn-lg btn-primary"%>
